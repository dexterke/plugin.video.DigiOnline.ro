<addon id="plugin.video.DigiOnline.ro"
version="1.0.0"
name="DigiOnline.ro"
provider-name="cralin">
<requires>
  <import addon="xbmc.python" version="2.25.0"/>
  <import addon="script.module.requests" version="2.12.4"/>
  <import addon="script.module.inputstreamhelper" version="0.3.3"/>
</requires>
<extension point="xbmc.python.pluginsource" library="main.py">
  <provides>video</provides>
</extension>
<extension point="xbmc.addon.metadata">
  <summary lang="en">Watch live TV channels from DigiOnline.ro</summary>
  <description lang="en_GB">
    Kodi addon for accessing DigiOnline.ro live TV channels.
    
User registration and login credentials are required in order to access DigiOnline.ro media content. 

Visit https://www.digiromania.ro for more details.
    
  </description>
  <disclaimer lang="en_GB">
    The author is not connected to or in any other way affiliated with Kodi, Team Kodi, the XBMC foundation, RCS RDS SA, digi24.ro or digionline.ro.
  </disclaimer>
  <assets>
    <icon>icon.png</icon>
    <fanart>fanart.jpg</fanart>
    <screenshot></screenshot>
  </assets>
  <news>Initial version of this plugin</news>
</extension>
</addon>
